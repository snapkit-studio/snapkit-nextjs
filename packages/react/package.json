{
  "name": "@snapkit-studio/react",
  "version": "1.6.2",
  "description": "React components for Snapkit image optimization",
  "keywords": [
    "react",
    "image",
    "components",
    "hooks",
    "snapkit",
    "optimization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/snapkit-studio/web.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "license": "MIT",
  "author": "Snapkit",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./image": {
      "types": "./dist/image.d.ts",
      "import": "./dist/image.mjs",
      "require": "./dist/image.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:analyze": "ANALYZE=true tsup",
    "check-types": "tsc --noEmit",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest --run",
    "version-info": "node -p \"'Package: @snapkit-studio/react, Current version: ' + require('./package.json').version\""
  },
  "dependencies": {
    "@snapkit-studio/core": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tsup": "8.5.0",
    "typescript": "^5.0.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
